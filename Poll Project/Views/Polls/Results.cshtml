@model Poll_Project.Models.PollResultsViewModel

@{
    ViewBag.Title = "Results";
}

<h2>Results</h2>

<div>
    <h4>Poll</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Poll.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Poll.Title)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            Number of Responses
        </dt>

        <dd>
            @Model.numOfResponses
        </dd>
    </dl>

    @foreach (var question in Model.Poll.Questions)
    {
        <div class="form-group">
            @Html.LabelFor(model => question.Text,
                question.Text,
               new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var answer in question.Answers)
                {
                    <p>
                        @answer.Text 
                        Times Chosen:
                        @Model.AnswerCounts[answer.ID] 
                    </p>
                }
            </div>
        </div>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Poll.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
